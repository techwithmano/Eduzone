rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Users can read/write their own document
      allow read, update: if request.auth.uid == userId;
      // Teachers can list users to find them for enrollment
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'TEACHER';
      // New users can create their own document
      allow create: if request.auth.uid == userId;
    }

    match /classrooms/{classroomId} {
      // Only the teacher who created the classroom can read or write to it
      allow read, write: if request.auth != null && request.resource.data.creatorId == request.auth.uid;
      // Enrolled students can read the classroom details
      allow get: if request.auth != null && request.auth.uid in resource.data.enrolledStudentIds;
      // Enrolled students can list the classrooms they are a part of (for their dashboard)
      allow list: if request.auth != null && request.resource.data.enrolledStudentIds.hasAny([request.auth.uid]);
    }
    
    match /classrooms/{classroomId}/announcements/{announcementId} {
      // Teacher (owner) can do anything
      allow write: if request.auth != null && get(/databases/$(database)/documents/classrooms/$(classroomId)).data.creatorId == request.auth.uid;
      // Enrolled students and the teacher can read
      allow read: if request.auth != null && (get(/databases/$(database)/documents/classrooms/$(classroomId)).data.creatorId == request.auth.uid || request.auth.uid in get(/databases/$(database)/documents/classrooms/$(classroomId)).data.enrolledStudentIds);
    }
    
    match /classrooms/{classroomId}/assignments/{assignmentId} {
      // Teacher (owner) can do anything
      allow write: if request.auth != null && get(/databases/$(database)/documents/classrooms/$(classroomId)).data.creatorId == request.auth.uid;
      // Enrolled students and the teacher can read
      allow read: if request.auth != null && (get(/databases/$(database)/documents/classrooms/$(classroomId)).data.creatorId == request.auth.uid || request.auth.uid in get(/databases/$(database)/documents/classrooms/$(classroomId)).data.enrolledStudentIds);
    }

    match /classrooms/{classroomId}/assignments/{assignmentId}/submissions/{studentId} {
      // The teacher who owns the classroom can read any submission.
      allow get, list: if request.auth != null && get(/databases/$(database)/documents/classrooms/$(classroomId)).data.creatorId == request.auth.uid;

      // A student can read and write their own submission, but only if they are enrolled in the class.
      allow get, write: if request.auth.uid == studentId && request.auth.uid in get(/databases/$(database)/documents/classrooms/$(classroomId)).data.enrolledStudentIds;
    }

    match /contacts/{documentId} {
      allow create: if true;
    }

    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'TEACHER';
    }
  }
}
