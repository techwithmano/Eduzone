
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to make rules more readable.
    function isAuth() {
      return request.auth != null;
    }
    function isRole(role) {
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    function getClassroom(classroomId) {
      return get(/databases/$(database)/documents/classrooms/$(classroomId));
    }
    function isClassroomAdmin(classroomId) {
      let classroom = getClassroom(classroomId);
      return isAuth() && classroom.data.creatorId == request.auth.uid;
    }
    function isClassroomTeacher(classroomId) {
      let classroom = getClassroom(classroomId);
      return isAuth() && request.auth.uid in classroom.data.teacherIds;
    }
    function isEnrolledStudent(classroomId) {
      let classroom = getClassroom(classroomId);
      return isAuth() && request.auth.uid in classroom.data.enrolledStudentIds;
    }
    function isClassroomMember(classroomId) {
      return isClassroomAdmin(classroomId) || isClassroomTeacher(classroomId) || isEnrolledStudent(classroomId);
    }

    // User Profiles
    match /users/{userId} {
      allow read: if isAuth();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isRole('ADMIN'); // Admins can modify user roles or classroom lists
    }

    // Contact Form Submissions
    match /contacts/{contactId} {
      allow create: if true; // Anyone can send a message
      allow read, update, delete: if false; // Managed in Firebase Console
    }
    
    // Store Products
    match /products/{productId} {
      allow read: if true; // Publicly readable store
      allow create, update, delete: if isRole('ADMIN');
    }
    
    // Classrooms
    match /classrooms/{classroomId} {
      allow read: if isClassroomMember(classroomId);
      allow create: if isRole('ADMIN');
      allow update: if isClassroomAdmin(classroomId);
      allow delete: if isClassroomAdmin(classroomId);

      // Announcements, Materials, Assignments, Quizzes
      match /{collection}/{docId}
      where collection in ['announcements', 'materials', 'assignments', 'quizzes'] {
        allow read: if isClassroomMember(classroomId);
        allow create, update, delete: if isClassroomAdmin(classroomId) || isClassroomTeacher(classroomId);

        // Submissions for Assignments and Quizzes
        match /submissions/{submissionId} {
          allow read: if isClassroomAdmin(classroomId) || isClassroomTeacher(classroomId) || isOwner(submissionId);
          allow create: if isOwner(submissionId) && !exists(/databases/$(database)/documents/classrooms/$(classroomId)/$(collection)/$(docId)/submissions/$(submissionId));
          allow update: if isClassroomAdmin(classroomId) || isClassroomTeacher(classroomId);
          allow delete: if isClassroomAdmin(classroomId) || isClassroomTeacher(classroomId);
        }
      }
    }
  }
}
