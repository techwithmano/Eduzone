
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // PUBLIC COLLECTIONS
    // ===================================
    match /contacts/{documentId} {
      // Anyone can send a message through the contact form
      allow create: if true;
      allow read, update, delete: if false; // Only backend processes should manage this
    }

    match /products/{productId} {
      // Anyone can view products in the store
      allow get, list: if true;
      // Only teachers can create, update, or delete products
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'TEACHER';
    }

    // USER-SPECIFIC COLLECTIONS
    // ===================================
    match /users/{userId} {
      // A user can get their own document
      allow get: if request.auth.uid == userId;
      // A user can create their own document upon signup
      allow create: if request.auth.uid == userId;
      // A teacher can search the list of users (e.g., to find a student by email)
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'TEACHER';
      // No one can update or delete another user's document through the client
      allow update, delete: if false;
    }

    // LMS-SPECIFIC COLLECTIONS
    // ===================================
    match /classrooms/{classroomId} {
        // Allow read if you are the creator OR you are an enrolled student
        allow get, list: if request.auth != null && (
                         request.auth.uid == resource.data.creatorId || 
                         request.auth.uid in resource.data.enrolledStudentIds
                       );
        
        // Only a teacher can create a classroom, and they must set themselves as the creator
        allow create: if request.auth != null &&
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'TEACHER' &&
                      request.resource.data.creatorId == request.auth.uid;
                      
        // Only the creator can update the classroom (e.g., to change details or enroll students)
        allow update: if request.auth != null && request.auth.uid == resource.data.creatorId;

        // Only the creator can delete the classroom
        allow delete: if request.auth != null && request.auth.uid == resource.data.creatorId;
    }
  }
}
